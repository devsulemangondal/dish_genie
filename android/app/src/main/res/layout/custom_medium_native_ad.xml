<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:minHeight="@dimen/medium_ad_height">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingTop="@dimen/medium_ad_padding"
    android:paddingBottom="@dimen/medium_ad_padding"
    android:paddingStart="@dimen/medium_ad_padding"
    android:paddingEnd="@dimen/medium_ad_padding">

    <!-- Left Section: Media/Icon View - Optimized size for medium ads -->
    <com.google.android.gms.ads.nativead.MediaView
        android:id="@+id/ad_media"
        android:layout_width="@dimen/medium_ad_media_size"
        android:layout_height="@dimen/medium_ad_media_size"
        android:layout_marginEnd="12dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:minWidth="@dimen/medium_ad_media_size"
        android:minHeight="@dimen/medium_ad_media_size" />

    <!-- Right Section: Text Content & CTA -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="start|center_vertical">

        <!-- AD Badge and Headline Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <!-- Red "AD" Badge - Pill shaped -->
            <TextView
                android:id="@+id/ad_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AD"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:textStyle="bold"
                android:background="@drawable/ad_badge_background"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_marginEnd="6dp" />

            <!-- Headline - same color as body but extra bold for emphasis -->
            <TextView
                android:id="@+id/ad_headline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="?attr/nativeAdTextSecondary"
                android:textSize="@dimen/medium_ad_headline_size"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:maxLines="1"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                android:visibility="visible" />

        </LinearLayout>

        <!-- Body Text -->
        <TextView
            android:id="@+id/ad_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/nativeAdTextSecondary"
            android:textSize="@dimen/medium_ad_body_size"
            android:maxLines="1"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            android:lineSpacingMultiplier="1.1"
            android:layout_marginBottom="8dp"
            android:visibility="visible" />

        <!-- Call to Action Button - Purple with rounded corners -->
        <TextView
            android:id="@+id/ad_call_to_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INSTALL"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@drawable/install_button_background"
            android:paddingStart="28dp"
            android:paddingEnd="28dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:minHeight="@dimen/medium_ad_cta_height"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

</LinearLayout>

</com.google.android.gms.ads.nativead.NativeAdView>
